config:
  # Your Tailscale MagicDNS domain for URL construction
  # This is found in Tailscale Admin Console -> DNS -> Tailnet name
  # e.g., "tail1234.ts.net" or your custom domain like "example.com"
  tailgate:tailnetDomain: "your-tailnet.ts.net"

  # Optional: GCP zone (default: us-central1-a, which is free tier eligible)
  # tailgate:zone: "us-central1-a"

  # Optional: hostname for the Tailscale device (default: admin)
  # tailgate:hostname: "admin"

  # GCP provider configuration
  gcp:project: "your-gcp-project-id"
  gcp:region: "us-central1"

  # Tailscale provider configuration
  # Set via: pulumi config set --secret tailscale:apiKey "tskey-api-..."
  tailscale:apiKey: ""
  # tailscale:tailnet is the organization name for API calls
  # This is typically your GitHub org (e.g., "myorg.github") or email domain
  # Found in Tailscale Admin Console -> Settings -> General -> Organization
  tailscale:tailnet: "your-org-name"
